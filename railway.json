{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "buildCommand": "pip install aiogram==3.3.0 && pip install --no-dependencies pydantic==2.6.0 && pip install -r requirements.txt --no-dependencies"
    },
    "deploy": {
      "startCommand": "python bot.py",
      "restartPolicyType": "ON_FAILURE",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "restartPolicyMaxRetries": 10
    },
    "variables": {
      "RAILWAY_ENVIRONMENT": "production"
    }
  }